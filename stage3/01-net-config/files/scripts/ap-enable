#!/bin/bash 

if [[ ! $EUID -eq 0 ]]; then
    echo "Please run this script as root."
    exit 1
fi

mv -v /etc/netplan/10-wlan-eth-bridge.yaml.ignore /etc/netplan/10-wlan-eth-bridge.yaml
netplan apply

sed -i 's|^# \(.*lan.*$\)|\1|' /etc/hosts

systemctl enable --now hostapd
systemctl enable --now dnsmasq
